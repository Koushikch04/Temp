<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet" />
  <title>login</title>
  <link
  rel="stylesheet"
  href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined"
/>
  <link rel="stylesheet" href="../../css/Authentication/login.css" />
</head>

<body>
  <div class="background"></div>
  <header>
    <div class="container">
      <ul>
        <li>
          <a href="/" class="logo">
            <div class="images">
              <span class="material-icons-outlined">
                pets
              </span>
            </div>
            <h2>Pets <span>Paradise.</span></h2>
          </a>
        </li>
        <li><a href="/" class="nav-link">Home</a></li>
      </ul>
    </div>
  </header>

  <main>
    <section class="contact">
      <div class="container">
        <div class="left">
          <div class="form-wrapper">
            <div class="contact-heading">
              <h1>Welcome Back<span>!</span></h1>
              <p class="text">Welcome Back! Please enter your details.</p>
            </div>

            <form action="/auth/employee/login" method="post" class="contact-form">
              <div class="input-wrap w-100">
                <input type="email" class="contact-input" name="Email" required autocomplete="off" id="user-mail" />
                <label>Employee ID</label>
                <i class="icon fa-solid fa-envelope"></i>
                <p id="mail-error"></p>
              </div>

              <div class="input-wrap w-100">
                <input type="password" class="contact-input" name="Password" required autocomplete="off"
                  id="user-password" />
                <label>Password</label>
                <i class="icon fa-solid fa-lock"></i>
                <p id="password-error"></p>
              </div>

              <div class="remember">
                <input type="checkbox" name="Remember" id="remember" />
                <label for="Remember">Remember For 30 Days</label>
              </div>
              <div class="forgot">
                <a href="forgot">Forgot Password</a>
              </div>

              <div class="contact-buttons">
                <input type="submit" value="Sign in" class="btn" />
              </div>

              <!-- <div class="google-button">
                <button class="btn google" type="button">
                  <img alt='Google "G" Logo'
                    src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/16px-Google_%22G%22_Logo.svg.png" />
                  <p>Sign in with Google</p>
                </button>
              </div> -->

              <div class="no-account">
                <p>Don't have an account? <a href="signup">Sign up</a></p>
              </div>
            </form>
            <p id="verify"></p>
          </div>
        </div>

        <div class="right">
          <div class="image-wrapper">
            <img src="../../img/Authentication/employeeLogin.gif" class="img" alt="" />
            <svg class="dashed-wave" viewBox="0 0 345 877" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path id="dashed-wave"
                d="M0.5 876C25.6667 836.167 73.2 739.8 62 673C48 589.5 35.5 499.5 125.5 462C215.5 424.5 150 365 87 333.5C24 302 44 237.5 125.5 213.5C207 189.5 307 138.5 246 87C185 35.5 297 1 344.5 1" />
            </svg>
          </div>
        </div>
      </div>
    </section>
  </main>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/js/all.min.js"></script>
  <script src="../../JavaScript/Authentication/loginSignUp.js"></script>
  <!-- <script src="../../Nodejs/app.js"></script> -->
</body>

</html>